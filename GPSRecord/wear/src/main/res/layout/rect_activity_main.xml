<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.android.wearable.keepphone.MainActivity"
                tools:deviceIds="wear_square">

	<TextView
		android:id="@+id/chronos"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:text="@string/default_value_chronos"
		android:textSize="20sp"
		/>

	<LinearLayout
		android:id="@+id/coordinateLocation"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/chronos"
		android:layout_marginBottom="6dp"
		>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<TextView
				android:id="@+id/label_latitude"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:text="@string/label_latitude"
				android:textSize="15sp"
				/>

			<TextView
				android:id="@+id/value_latitude"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/label_latitude"
				android:layout_centerHorizontal="true"
				android:text="@string/default_value_coord"
				android:textSize="20sp"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<TextView
				android:id="@+id/label_longitude"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:text="@string/label_longitude"
				android:textSize="15sp"
				/>

			<TextView
				android:id="@+id/value_longitude"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/label_longitude"
				android:layout_centerHorizontal="true"
				android:text="@string/default_value_coord"
				android:textSize="20sp"
				/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/speedLocation"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/chronos"
		android:layout_marginTop="5dp"
		>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<TextView
				android:id="@+id/value_speed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:text="@string/default_value_speed"
				android:textSize="20sp"/>

			<TextView
				android:id="@+id/label_speed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/value_speed"
				android:layout_centerHorizontal="true"
				android:text="@string/label_speed"
				android:textSize="15sp"
				/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<TextView
				android:id="@+id/value_avg_speed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:text="@string/default_value_speed"
				android:textSize="20sp"/>

			<TextView
				android:id="@+id/label_avg_speed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/value_avg_speed"
				android:layout_centerHorizontal="true"
				android:text="@string/label_avg_speed"
				android:textSize="15sp"
				/>

		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>
